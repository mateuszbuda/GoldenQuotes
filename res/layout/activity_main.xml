<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabRandomQuote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/text_quote"
        style="@style/textStyleQuote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:ems="10"
        android:fontFamily="Thin"
        android:freezesText="true"
        android:gravity="bottom|center_horizontal"
        android:hint="QUOTATION"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_author"
        style="@style/textStyleAuthor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:fontFamily="sans-serif"
        android:freezesText="true"
        android:gravity="right"
        android:hint="AUTHOR" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/particular_author"
            android:drawableLeft="@drawable/ic_action_person"
            android:background="@null" />

    </LinearLayout>

    <Button
        android:id="@+id/button_gamble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff33b5e5"
        android:onClick="onClickBtn"
        android:text="Gamble" />

</LinearLayout>